<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:outlineAmbientShadowColor="#20D5BF">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="203dp" app:srcCompat="@drawable/unnamed" android:id="@+id/imageView2"
                android:contentDescription="@string/img1"/>
        <TextView
                android:text="@string/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTitle"
                android:layout_gravity="center" android:textSize="30sp"/>
        <TextView
                android:text="@string/instructions_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="b"
                android:ems="10"
                android:id="@+id/txtChar"
                android:maxLength="1" android:hint="Caracter"/>
        <Button
                android:text="Enviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnChar"/>
        <Button
                android:text="Cerrar Conexion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnCloseConn"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>